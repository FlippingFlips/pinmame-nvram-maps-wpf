<UserControl x:Class="PinMAME.NvMaps.Win.Module.Views.Mapping"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Height="Auto">
        <GroupBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="4"                   
                  VerticalAlignment="Stretch"
                      Margin="3" Header="JSON MAPPING">
            <TextBox IsReadOnly="False" Text="{Binding NvRamMapJson, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap">
            </TextBox>
        </GroupBox>
    </Grid>
</UserControl>
